extends session

block append head
    link(rel='stylesheet' type='text/css' href='../_sass/circle.css')

block main

    //- .col-lg-2#icons
    .left#icons.centered.d-flex.justify-content-around
        img(src='/_assets/images/kick3.png' alt='kick')
        img(src='/_assets/images/clap2.png' alt='clap')
        img(src='/_assets/images/snap2.png' alt='snap')

    //- .col-lg-8#svg
    .content#svg.centered

    //- .col-lg-2#bpms
    .right#bpms.centered.d-flex.justify-content-around
        button(
            v-for="button in buttons"
            :value="button.bpm"
            @click="click(button.bpm)"
        ) {{ button.bpm}}

block append scripts

    //- Sources
    script(src='/_lib/SnapPlugins.js')
    script(src='/_lib/Colors.js')
    script(src='/_lib/Utils.js')
    script(src='/_lib/Point.js')
    script(src='/_lib/Circle.js')
    script(src='/_lib/BaseApp.js')
    script(src='/_lib/CircleApp.js')
    script(src='/_js/circle.js')
