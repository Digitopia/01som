extends base

block body

    //- #wrapper
    .container#wrapper

        .row#header

            .left#info.centered
                //- i.fa.fa-question-circle.help-icon

            .content#title.centered

                .subtitle
                    h4
                        block subtitle
                            | Sess√£o 1
                .title
                    h2
                        block subtitle2
                            | Ritmo

            .right#help.centered
                i.fa.fa-question-circle.help-icon(data-toggle='modal', data-target='#instructions')

        .row#main
            block main

        .row

            //- #controls
            #controls.content.centered

                .control.fullscreen
                    i#btnFullscreen.fa.fa-expand(onclick="screenfull.toggle()")
                    span#spanFullScreen FULLSCREEN

                .control
                    i#btnPlay.far.fa-play-circle
                    span#spanPlay PLAY

                .control
                    i#btnRecord.far.fa-dot-circle
                    span#spanRecord REC

        //- footer.footer#sponsors.centered
        //-     a(href='http://www.bragamediaarts.com/en/' target='blank'): img(src='/_assets/images/BMA-1M.png')
        //-     a(href='http://digitopia.github.io/' target='blank'): img(src='/_assets/images/digitopia.png')
        //-     a(href='https://www.cm-braga.pt/' target='blank'): img(src='/_assets/images/braga.png')

    #breakpoint

    #loader

    //- Bootstrap modal
    #instructions.modal.fade.hide(tabindex='-1', role='dialog')
        .modal-dialog(role='document').modal-dialog-centered
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body.text-center
                    p.text-muted
                        block instructions
